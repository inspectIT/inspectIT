	<!-- SecurityService -->
	<bean id="securityService" class="org.springframework.aop.framework.ProxyFactoryBean" scope="prototype" lazy-init="true">
		<property name="proxyInterfaces">
			<list>
				<value>info.novatec.inspectit.cmr.service.ISecurityService</value>
